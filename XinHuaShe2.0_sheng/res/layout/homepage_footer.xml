<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
     >

    <LinearLayout 
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        
        <RelativeLayout 
            android:id="@+id/home_layout_xinwendongtai"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            >
            <ImageView 
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="新闻动态"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
            <View 
                android:layout_alignParentRight="true"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/home_layout_zhangshangzhengwu"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
             <ImageView 
                android:id="@+id/image2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="掌上政务"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:id="@+id/view1"
        android:layout_below="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/gray"/>
    <LinearLayout 
        android:id="@+id/layout2"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        
        <RelativeLayout 
            android:id="@+id/home_layout_huimingshenghuo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="惠民生活"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
            <View 
                android:layout_alignParentRight="true"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/home_layout_hudongfenxiang"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
             <ImageView 
                android:id="@+id/image2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="互动分享"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
     <View 
        android:id="@+id/view2"
        android:layout_below="@id/layout2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:background="@color/gray"/>
    <LinearLayout 
        android:id="@+id/layout3"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        
        <RelativeLayout 
            android:id="@+id/home_image_zhong"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            >
            <ImageView 
                android:id="@+id/image1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="舆情快报"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
            <View 
                android:layout_alignParentRight="true"
		        android:layout_width="1dp"
		        android:layout_height="match_parent"
		        android:background="@color/gray"/>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/home_image_china"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            >
             <ImageView 
                android:id="@+id/image2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/cop_bg_1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
            <TextView 
                android:layout_toRightOf="@id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text="中国网事"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>