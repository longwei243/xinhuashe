<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
        android:id="@+id/mydata_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView 
            android:id="@+id/mydata_zhanghao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="账号"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mydata_rezheng_tv" 
            android:layout_toRightOf="@id/mydata_zhanghao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(未认证)"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:id="@+id/mydata_portrait_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
        	android:src="@drawable/login_username"
            />
        
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_2"
        android:layout_below="@id/mydata_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        />
    <RelativeLayout 
        android:id="@+id/mydata_3"
        android:layout_below="@id/mydata_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="用户名"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/mydata_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_4"
        android:layout_below="@id/mydata_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        />
    <RelativeLayout 
        android:id="@+id/mydata_5"
        android:layout_below="@id/mydata_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="姓名"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mydata_real_name_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_6"
        android:layout_below="@id/mydata_5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        android:visibility="gone"
        />
    <RelativeLayout 
        android:id="@+id/mydata_7"
        android:layout_below="@id/mydata_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="性别"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <RadioGroup 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            >
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"
                />
            <RadioButton 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                />
        </RadioGroup>
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_8"
        android:layout_below="@id/mydata_7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        android:visibility="gone"
        />
    <RelativeLayout 
        android:id="@+id/mydata_9"
        android:layout_below="@id/mydata_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="手机号码"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:id="@+id/mydata_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_10"
        android:layout_below="@id/mydata_9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        android:visibility="gone"
        />
    <RelativeLayout 
        android:id="@+id/mydata_11"
        android:layout_below="@id/mydata_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邮箱"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mydata_email_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_12"
        android:layout_below="@id/mydata_11"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        android:visibility="gone"
        />
    <RelativeLayout 
        android:id="@+id/mydata_13"
        android:layout_below="@id/mydata_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="地区"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mydata_space_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_14"
        android:layout_below="@id/mydata_13"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        />
    <RelativeLayout 
        android:id="@+id/mydata_15"
        android:layout_below="@id/mydata_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView
            android:id="@+id/mydata_changePassword_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改密码"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        
       
    </RelativeLayout>
    <View 
        android:id="@+id/mydata_16"
        android:layout_below="@id/mydata_15"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/mydata_change_personaldata_tv" 
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑个人资料"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="1dp"
            android:background="@color/news_blue"
            android:layout_marginBottom="5dip"
            />
        <TextView
            android:id="@+id/mydata_commit_changedata_tv" 
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dip"
            android:text="提交修改申请"
            android:background="@color/news_blue"
            android:layout_marginBottom="5dip"
            />
    </LinearLayout>
</RelativeLayout>
