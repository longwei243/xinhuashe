<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.xinhuanews.sheng"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:orientation="vertical" >

    <Gallery
        android:id="@id/homepage_header_Gallery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:spacing="5dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:layout_gravity="bottom"
        android:background="@color/homepage_playview_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/homepage_header_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.xinhua.xinhuashe.view.FlowIndicator
            android:id="@id/homepage_header_FlowIndicator"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:count="1"
            app:point_normal_color="#45000000"
            app:point_radius="3dip"
            app:point_seleted_color="#ffffff"
            app:point_size="5dip"
            app:space="10dip" />
    </LinearLayout>

</FrameLayout>