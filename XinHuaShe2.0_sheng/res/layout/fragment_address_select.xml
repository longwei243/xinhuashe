<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fadingEdge="none"
    android:fadingEdgeLength="0dp"
    android:scrollbars="none"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <RelativeLayout
	        android:id="@id/main_header_RelativeLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp" >
	
	        <include layout="@layout/main_header_blue" />
	
	    </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <View 
                android:id="@+id/sheng_top_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F8F8F8"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="全国"
                android:textSize="20sp"
                />
            <com.xinhua.xinhuashe.view.GridViewInScrollView 
                android:id="@+id/sheng_gridview"
                android:layout_below="@id/sheng_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
			    android:fadingEdge="none"
			    android:fadingEdgeLength="0dp"
			    android:gravity="center_horizontal"
			    android:horizontalSpacing="6dp"
			    android:padding="5dp"
			    android:scrollbars="none"
			    android:verticalSpacing="6dp"
			    android:numColumns="4"
			    android:listSelector="@drawable/gridview3_selector"
                />
            <Button 
                android:id="@+id/sheng_btn"
                android:layout_below="@id/sheng_gridview"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#0166AC"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <View 
                android:id="@+id/shi_top_view"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#F8F8F8"
                android:visibility="gone"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="全国"
                android:textSize="16sp"
                android:visibility="gone"
                />
            <com.xinhua.xinhuashe.view.GridViewInScrollView 
                android:layout_below="@id/shi_top_view"
                android:id="@+id/shi_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
			    android:fadingEdge="none"
			    android:fadingEdgeLength="0dp"
			    android:gravity="center_horizontal"
			    android:horizontalSpacing="6dp"
			    android:padding="5dp"
			    android:scrollbars="none"
			    android:verticalSpacing="6dp"
			    android:numColumns="4"
			    android:listSelector="@drawable/gridview3_selector"
                />
            <Button 
                android:id="@+id/shi_btn"
                android:layout_below="@id/shi_gridview"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#0166AC"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <View 
                android:id="@+id/xian_top_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F8F8F8"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="县区"
                android:textSize="20sp"
                />
            <com.xinhua.xinhuashe.view.GridViewInScrollView 
                android:layout_below="@id/xian_top_view"
                android:id="@+id/xian_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
			    android:fadingEdge="none"
			    android:fadingEdgeLength="0dp"
			    android:gravity="center_horizontal"
			    android:horizontalSpacing="6dp"
			    android:padding="5dp"
			    android:scrollbars="none"
			    android:verticalSpacing="6dp"
			    android:numColumns="4"
			    android:listSelector="@drawable/gridview3_selector"
                />
            <Button 
                android:id="@+id/xian_btn"
                android:layout_below="@id/xian_gridview"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="80dp"
                android:layout_height="26dp"
                android:gravity="center_horizontal"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="#0166AC"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>
</ScrollView>
