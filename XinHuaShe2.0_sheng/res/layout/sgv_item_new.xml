<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.xinhua.xinhuashe.view.staggeredgridview.DynamicHeightImageView
        android:id="@+id/svg_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/svg_picdirect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:textColor="@color/viewpager_tab_text_normal"
        android:background="@color/viewpager_tab_main_bg"
        android:textSize="16sp" />

</FrameLayout>