<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/loadingdialog_bg"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/loadingdialog_title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:padding="10dip"
        android:text="@string/loadingdialog_title"
        android:textSize="15sp"
        android:textColor="@color/white" />

    <ImageView
        android:id="@id/loadingdialog_refresh_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:background="@drawable/loadingdialog_refresh"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/loadingdialog_line"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@id/loadingdialog_cancel_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/loadingdialog_cancel" />

</LinearLayout>