<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@id/main_header_RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <include layout="@layout/main_header_blue" />

    </RelativeLayout>

    <FrameLayout
        android:id="@id/slidingmenu_control_FrameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_header_RelativeLayout" />
    
	<View 
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@id/main_header_RelativeLayout"
        android:background="@drawable/slidingmenu_list_shadow"/>

</RelativeLayout>