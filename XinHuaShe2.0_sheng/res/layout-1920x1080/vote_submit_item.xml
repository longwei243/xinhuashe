<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/vote_submit_item_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp" >

            <RelativeLayout
                android:id="@+id/vote_submit_item_relative"
                android:layout_width="fill_parent"
                android:layout_height="100dp" >

                <ImageView
                    android:id="@+id/vote_submit_item_image"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:src="@drawable/notification" 
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/vote_submit_item_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/vote_submit_arrow" 
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/vote_submit_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/vote_submit_item_arrow"
                    android:layout_toRightOf="@+id/vote_submit_item_image"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:text="低端就业人口和世界大都市不匹配，呼吁用市场控制人口."
					android:textSize="17sp"                    
                    android:textColor="#000000" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="#dcdcdc" />

            <TextView
                android:id="@+id/vote_submit_item_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="代表建议禁止低端产业进京，你咋看？"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:id="@+id/vote_submit_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="2013-12-24"
                    android:textColor="#9c9c9c" />

                <TextView
                    android:id="@+id/vote_submit_item_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="62046人参与"
                    android:textColor="#9c9c9c" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/vote_submit_item_linear"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>