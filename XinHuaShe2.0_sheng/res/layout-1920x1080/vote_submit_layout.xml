<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteSubmitFragment" >

    <TextView
        android:id="@+id/vote_submit_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#2d91cf"
        android:gravity="center"
        android:text="投票"
        android:textColor="#000000" 
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/vote_submit_relative"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/vote_submit_title"
        android:background="#ffffff" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vote_submit_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/vote_submit_linear_dot"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>

</RelativeLayout>